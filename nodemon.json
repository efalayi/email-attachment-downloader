{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "ts": "node --harmony"
  },
  "watch": [
    "src/server"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts",
  "exec": "concurrently \"npm run start:server\" \"npm run start:client\""
}
