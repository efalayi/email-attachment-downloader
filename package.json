{
  "name": "email-attachment-downloader-client",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:3000",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/express": "^4.17.8",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "express": "^4.17.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "3.4.3",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "clean": "rm -rf build",
    "start:client": "wait-on -l tcp:3000 && react-scripts start",
    "build:client": "react-scripts build",
    "eject:client": "react-scripts eject",
    "test:client": "react-scripts test",
    "build:server": "babel src/server --out-dir build/server --extensions \".ts\" --source-maps inline",
    "start:server": "node build/server/server.js",
    "start:dev": "yarn run clean && yarn run build:server && wait-on -l build/server/server.js && nodemon",
    "build": "yarn run build:client && yarn run build:server"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "wait-on": "^5.2.0"
  }
}
